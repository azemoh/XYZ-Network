@model WebApp.Models.EditStudentViewModel

@{
    ViewBag.Title = "Edit Student";
}

@Html.Partial("_NavPartial")

<div id="main" class="col-sm-9">
    <h2>@ViewBag.Title.</h2>
    <div class="view-head clearfix">
        <span class="pull-right">
            <a href="@Url.Action("Index", "Student")" class="button">
                <i class="fa fa-chevron-circle-left fa-fw"></i>Back to List
            </a>
        </span>
    </div>

@using (Html.BeginForm("Edit", "Student", FormMethod.Post, new { @class = "", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.UserId)

    <div class="row input-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-xs-3 field-label" })
        <div class="col-sm-7 col-xs-9">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "field" })
        </div>
    </div>
    <div class="row input-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-xs-3 field-label" })
        <div class="col-sm-7 col-xs-9">
            @Html.TextBoxFor(m => m.LastName, new { @class = "field" })
        </div>
    </div>
    <div class="row input-group">
        @Html.LabelFor(m => m.Sex, htmlAttributes: new { @class = "col-xs-3 field-label" })
        <div class="col-sm-7 col-xs-9">
           @Html.DropDownList("Sex", null, htmlAttributes: new { @class = "field" })
        </div>
    </div>


    <div class="row input-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-xs-3 field-label" })
        <div class="col-sm-7 col-xs-9">
            @Html.TextBoxFor(m => m.Email, new { @class = "field", type = "email" })
        </div>
    </div>
    <div class="row input-group">
        @Html.LabelFor(m => m.Phone, new { @class = "col-xs-3 field-label" })
        <div class="col-sm-7 col-xs-9">
            @Html.TextBoxFor(m => m.Phone, new { @class = "field", type = "tel" })
        </div>
    </div>
    <div class="row input-group">
        <div class="col-sm-7 col-xs-9 col-xs-offset-3">
            <input type="submit" class="button" value="Save" />
        </div>
    </div>
}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
