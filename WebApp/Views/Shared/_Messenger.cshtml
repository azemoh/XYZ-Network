@using Microsoft.AspNet.Identity
@using WebApp.Models
@{
    WebAppDbContext db = new WebAppDbContext();
    var userId = User.Identity.GetUserId();
    var user = db.Users.Where(u => u.Id == userId).First();
}
<input type="hidden" id="username" value="@user.Name">

<div id="messenger">
    <div class="head">
        <strong>Messenger</strong>
    </div>
    <div class="body">
        <div class="message-area">
            <div class="message-item">
                <div class="image">
                    <img src="/Content/Images/profile-img.png" alt="Avatar">
                </div>
                <div class="message">
                    <strong>Administrator:</strong>
                    Hello user! use the messenger to communicate with your friends and collegues in real time.
                </div>
            </div>
        </div>
        <div class="send-form">
            <div class="form">
                <input type="text" id="message" placeholder="Say something...">
                <input type="submit" id="send" value="Send">
            </div>
        </div>
    </div>
</div>
