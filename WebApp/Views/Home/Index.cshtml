@model WebApp.Models.LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Sign in";
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.title | XYZ School Net.</title>
    <link rel="stylesheet" href="~/Content/Stylesheets/index.css" />
</head>
<body>
    <h1 class="brand-name">XYZ <span>School Network</span></h1>
    <div class="main clearfix">

        <div class="login-left">
            <div class="login-form">
                <h2>Sign in</h2>
                @using(Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" })) {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(m => m.Email, new { @class = "field", type = "email", required = "required", placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                    @Html.PasswordFor(m => m.Password, new { @class = "field", required = "required", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                    <div class="remember">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                    <input type="submit" value="Sign in">
                }
            </div>
        </div>

        <div class="welcome">
            <h3>Welcome to the Network!</h3>
            <p>Welcome to the XYZ School Network.</p>

            <h3>Take tests online</h3>
            <p>This website have been developed to allow our students take their tests online.</p>

            <h3>Messenger</h3>
            <p>We also developed a messenger application, so you can communicate with your colleagues in real time.</p>
        </div>
    </div>

    <footer>
        <span>All content copyright XYZ School &copy; @DateTime.Now.Year</span>
    </footer>
</body>
</html>
