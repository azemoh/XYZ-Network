@{
    ViewBag.Title = "Dashboard";
}
@Html.Partial("_NavPartial")
<div id="main" class="col-sm-9">
    <h2>@ViewBag.Title</h2>
    <div class="board">
        <h3>Welcome! Student </h3>

        <p>
            Hello and welcome to the <strong>XYZ School Network</strong>, you have been registered with a student account.
            This gives you authorization to take tests and manage your account. Go to the <a href="@Url.Action("Index","Taketest")">test</a>
            page to view and attempt the available tests. In the <a href="@Url.Action("Index","Manage")">account</a> section
            you can change your password and upload a profile photo.
        </p>
        <p>
            And your welcome to try out our <strong>messenger</strong> app. You can use it to commmunicate
            with other students in realtime. Just click on it in the lower right corner.
        </p>
    </div>
</div>
